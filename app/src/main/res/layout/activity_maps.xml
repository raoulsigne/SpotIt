<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techafrkix.work.com.spot.spotit.MapsActivity">

    <LinearLayout
        android:id="@+id/findspot"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/myblue">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/search"
            android:layout_gravity="center"
            android:scaleType="center">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Search spots"
            android:layout_gravity="center"
            android:textColor="@color/blanc"
            android:textSize="14sp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMySpot"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/badge"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" Spots"
                android:textAlignment="center"
                android:textColor="@color/blanc"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgMySpots"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="12dp"
                    android:src="@drawable/play_button"
                    android:background="@drawable/custom_shape"/>

                <ImageView
                    android:id="@+id/imgLocateMe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/gps_signal"
                    android:background="@drawable/round_button_blue"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</fragment>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techafrkix.work.com.spot.spotit.Account">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blanc">

        <LinearLayout
            android:id="@+id/infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgprofile_friend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPseudo_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stephen Curry"
                    android:textColor="@color/mainblue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSpots_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="28 spots | 15 respots" />

                <TextView
                    android:id="@+id/txtFriends_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="26 Friends" />

            </LinearLayout>

        </LinearLayout>

        <fragment
            android:id="@+id/friendmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_new"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:context="techafrkix.work.com.spot.spotit.Account_Friend">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingBottom="35dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgNbSpots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/play_spot" />

                    <TextView
                        android:id="@+id/txtNbSpot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Spots"
                        android:textAlignment="center"
                        android:textColor="@color/mainblue"
                        android:textSize="15sp" />
                </LinearLayout>

            </RelativeLayout>
        </fragment>

    </LinearLayout>
</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techafrkix.work.com.spot.spotit.DetailSpot">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fond_detail">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoordonnÃ©es"
                android:textColor="#494949"
                android:textAlignment="center"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@color/blanc"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal"
                    android:textSize="11sp"
                    android:textColor="@color/noir"
                    android:id="@+id/edtLatitude"
                    android:layout_gravity="center_horizontal"
                    android:hint="   Latitude"/>

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal"
                    android:textSize="11sp"
                    android:textColor="@color/noir"
                    android:id="@+id/edtLongitude"
                    android:layout_gravity="center_horizontal"
                    android:hint="   Longitude"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qui peut voire ce spot ?"
                android:textColor="#494949"
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:divider="?android:dividerVertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@color/blanc">
                    <ImageButton
                        android:layout_marginTop="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/visibiliteMoi"
                        android:background="@drawable/moi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Moi"
                        android:id="@+id/txtMoi"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@color/blanc">
                    <ImageButton
                        android:layout_marginTop="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/visibiliteFriend"
                        android:background="@drawable/friend"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mes amis"
                        android:textSize="10sp"
                        android:id="@+id/txtAmis"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@color/blanc">
                    <ImageButton
                        android:layout_marginTop="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/visibilitePublic"
                        android:background="@drawable/publics"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tout le monde"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:id="@+id/txtPublic"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:text="Valider"
            android:id="@+id/btnValider"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_blue"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>
    </ScrollView>
</FrameLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtFindspot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="spot tag"
        android:textColor="#555555"
        android:textSize="14sp"
        android:drawableLeft="@drawable/search_tag"
        android:drawablePadding="20dp"
        android:background="@drawable/custom_edittext"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="spot place"
        android:textColor="#555555"
        android:textSize="14sp"
        android:drawableLeft="@drawable/search_place"
        android:drawablePadding="20dp"
        android:background="@drawable/custom_edittext"/>

    <LinearLayout
        android:id="@+id/bloccontrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listplaces"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blanc"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/visibiliteMoi"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/moi_" />

            <TextView
                android:id="@+id/txtMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="My spots"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/titre_menu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blanc"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/visibiliteFriend"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/friend_clicked" />

            <TextView
                android:id="@+id/txtAmis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Friends"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/titre_menu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blanc"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/visibilitePublic"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/publics" />

            <TextView
                android:id="@+id/txtPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Publics"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/titre_menu"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnValider"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_blue"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>